<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <watson.punwarz.ImageView.RoundedImageView
        android:id="@+id/requestImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/buttonRequestDecline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/avatar1" />

    <TextView
        android:id="@+id/requestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonRequestAccept"
        android:layout_alignBottom="@+id/buttonRequestAccept"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_toEndOf="@+id/requestImage"
        android:layout_toRightOf="@+id/requestImage"
        android:padding="3dip"
        android:text="temp" />

    <Button
        android:id="@+id/buttonRequestDecline"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#FF0000"
        android:text="✗" />

    <Button
        android:id="@+id/buttonRequestAccept"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonRequestDecline"
        android:layout_toStartOf="@+id/buttonRequestDecline"
        android:backgroundTint="#008000"
        android:text="✓" />

</RelativeLayout>